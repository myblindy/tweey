{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for buildings",

  "type": "object",

  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the building."
    },
    "type": {
      "type": "string",
      "enum": [ "production", "storage" ]
    },
    "width": {
      "type": "integer",
      "minimum": 1
    },
    "height": {
      "type": "integer",
      "minimum": 1
    },
    "productionLines": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "inputs": {
            "type": "array",
            "items": { "$ref": "../BaseSchemas/resource_quantity.json#/definitions/resourceQuantity" }
          },
          "outputs": {
            "type": "array",
            "items": { "$ref": "../BaseSchemas/resource_quantity.json#/definitions/resourceQuantity" }
          }
        },
        "required": [ "inputs", "outputs" ]
      }
    },
    "buildCost": {
      "type": "object",
      "properties": {
        "workTicks": {
          "type": "number",
          "minimum": 0
        },
        "resources": {
          "type": "array",
          "items": { "$ref": "../BaseSchemas/resource_quantity.json#/definitions/resourceQuantity" }
        }
      }
    },
    "emitLight": { "$ref": "../BaseSchemas/light.json#/definitions/light" }
  },
  "required": [ "name", "type", "width", "height", "buildCost" ]
}
