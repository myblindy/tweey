{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for buildings",

  "type": "object",

  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the building."
    },
    "type": {
      "type": "string",
      "enum": [ "workPlace", "storage" ]
    },
    "width": {
      "type": "number"
    },
    "height": {
      "type": "number"
    }
  },

  "required": [ "name", "type", "width", "height" ]
}
