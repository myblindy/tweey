{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for buildings",

  "type": "object",

  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the building."
    },
    "type": {
      "type": "string",
      "enum": [ "production", "storage" ]
    },
    "width": {
      "type": "integer",
      "minimum": 1
    },
    "height": {
      "type": "integer",
      "minimum": 1
    },
    "color": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "description": "The representative color of this building",
      "items": {
        "type": "number"
      }
    },
    "productionLines": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "inputs": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "resource": {
                  "type": "string"
                },
                "quantity": {
                  "type": "integer",
                  "minimum": 1
                }
              }
            }
          },
          "outputs": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "resource": {
                  "type": "string"
                },
                "quantity": {
                  "type": "integer",
                  "minimum": 1
                }
              }
            }
          }
        },
        "required": [ "inputs", "outputs" ]
      }
    }
  },

  "required": [ "name", "type", "width", "height", "color" ]
}
