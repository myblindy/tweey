{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for buildings",

  "type": "object",

  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the building."
    },
    "type": {
      "type": "string",
      "enum": [ "workPlace", "storage" ]
    },
    "width": {
      "type": "integer",
      "minimum": 1
    },
    "height": {
      "type": "integer",
      "minimum": 1
    },
    "color": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "description": "The representative color of this building",
      "items": {
        "type": "number"
      }
    }
  },

  "required": [ "name", "type", "width", "height", "color" ]
}
