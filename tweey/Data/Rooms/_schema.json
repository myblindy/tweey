{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for rooms",

  "type": "object",

  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the room."
    },
    "requirements": {
      "type": "array",
      "items": {
        "type": "object",

        "properties": {
          "type": {
            "type": "string",
            "enum": [ "exact", "atLeast" ]
          },
          "value": {
            "type": "number",
            "minimum": 0
          },
          "building": {
            "type": "string"
          }
        },
        "required": [ "building", "type", "value" ]
      }
    }
  },

  "required": [ "name", "requirements" ]
}
