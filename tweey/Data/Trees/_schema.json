{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for trees",

  "type": "object",

  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the tree."
    },
    "containingResources": {
      "type": "array",
      "items": { "$ref": "../BaseSchemas/resource_quantity.json#/definitions/resourceQuantity" }
    },
    "workTicks": {
      "type": "number",
      "minimum": 0
    }
  },
  "required": [ "name", "containingResources", "workTicks" ]
}
