{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for lights",
  "definitions": {
    "light": {
      "type": "object",
      "properties": {
        "range": {
          "type": "number",
          "minimum": 1
        },
        "color": {
          "type": "array",
          "minItems": 3,
          "maxItems": 3,
          "items": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    }
  }
}